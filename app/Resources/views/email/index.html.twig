{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Ver emails{% endblock %}

{% block page_title %}<h1 class="text-default">Emails</h1>{% endblock %}

{% block page_title_right %}
{% endblock %}


{% block page_content %}

    <style>
        .left_col{
            height:1300px;
        }
    </style>

    <br><br>

    

    <div class="row">
        <div class="col-md-4">
            {% for e in email %}
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">{{e.name}} - {{e.phone}}</h3>
                </div>
                <div class="panel-body">
                    <p class="bold fs-21">{{e.subject}}</p>
                    <p class="fs-16">{{e.description}}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    

{% endblock %}
